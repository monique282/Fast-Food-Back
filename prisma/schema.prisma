// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id   Int    @id @default(autoincrement())
  text String @unique

  @@map("messages")
}

model Product {
  id       Int        @id @default(autoincrement())
  imagem   String
  name     String
  prince   Int
  category Category
  combo    Combo[]
  request  Requests[]

  @@map("products")
}

enum Category {
  FOLLOWUP
  DRINK
  DESSERT
  COMBO

  @@map("categories")
}

model Combo {
  id      Int       @id @default(autoincrement())
  nome    String
  Product Product[]

  @@map("combo")
}

model Requests {
  id          Int       @id @default(autoincrement())
  name        String
  code        Int       @unique
  products    Product[]
  observation String
  ready       Boolean   @default(false)

  @@map("requests")
}
