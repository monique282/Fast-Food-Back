// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id   Int    @id @default(autoincrement())
  text String @unique

  @@map("messages")
}

model Product {
  id          Int      @id @default(autoincrement())
  image       String
  name        String   @unique
  price       Float
  description String
  category    Category
  combo       Combo[]

  @@map("products")
}

enum Category {
  FOLLOW
  SNACKS
  DRINK
  DESSERT
  COMBOO

  @@map("categories")
}

model Combo {
  id      Int       @id @default(autoincrement())
  nome    String
  Product Product[]

  @@map("combo")
}

model Request {
  id              Int        @id @default(autoincrement())
  image           String
  name            String
  price           Float
  description     String
  counter         Int
  followUps       FollowUp[]
  observationText String
  total           String
  nameClient      String
  code            Int
  ready           Boolean    @default(false)

  @@map("request")
}

model FollowUp {
  idP       Int     @id @default(autoincrement())
  id        Int
  item      String
  price     String
  requestId Int
  request   Request @relation(fields: [requestId], references: [id])

  @@map("followUp")
}

model Code {
  id     Int @id @default(autoincrement())
  idcode Int

  @@map("code")
}
